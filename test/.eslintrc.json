{
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "plugins": ["node"],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "node/shebang": "error",
        "node/no-unsupported-features": "off",
        "no-console": "off",
        "quotes": ["error", "single"]
    }
}